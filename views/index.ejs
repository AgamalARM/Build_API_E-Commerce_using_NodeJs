<html lang="en">
<%- include("./partials/head.ejs") %>

<body>
  <%- include("./partials/nav.ejs") %>

  <div class="blogs content">
    <h2>All Products</h2>

    <% if (blogs.length > 0) { %>
      <% blogs.forEach(blog => { %>
        <a class="single" href="/api/v1/products/<%= blog._id %>">
          <h3 class="title"><%= blog.product %></h3> 
          <p class="snippet"><%= blog.description %></p>
          <p class="snippet"><%= blog.brand %></p>
          <p class="snippet"><%= blog.price %></p>
        </a>
        
        <hr>
      <% }) %>
    <% } else { %>
      <p>There are no products to display...</p>
    <% } %>
    
  </div>

    

  <%- include("./partials/footer.ejs") %>
</body>
</html>